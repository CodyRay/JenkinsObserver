<Window x:Class="JenkinsObserver.Console"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JenkinsObserver"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Console" Height="300" Width="300" Loaded="Console_OnLoaded" KeyDown="Console_OnKeyDown">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="222" Margin="10,37,0,0" VerticalAlignment="Top" Width="272" Background="#FF303030">
            <TextBlock Padding="5" x:Name="output" HorizontalAlignment="Left" Height="222" Margin="-1" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" FontFamily="Consolas" FontSize="10.667" Background="#FFCDCDCD"><Run Text="Select Command and Press Enter"/></TextBlock>
        </Border>

    </Grid>
</Window>
